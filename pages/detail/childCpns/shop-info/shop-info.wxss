/* pages/detail/childCpns/shop-info/shop-info.wxss */
.logo{
  margin: 20rpx;
}
.logo image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border:1px solid rgba(0,0,0,.1);
}
.logo text{
  margin-left:20rpx;
  position: relative;
  top: -27rpx;
}
.describe{
  display: flex;
  margin: 20px;
}
.left{
  flex: 1;
  display: flex;
  border-right: 1px solid rgba(0,0,0,.1);
}
.right{
  flex: 1;
}
.sale,.baby{
  flex: 1;
  text-align: center;
}
.evaluate{
  margin: 5rpx 20rpx;
  display: flex;
  justify-content: space-between;
}
.high{
  background-color: #ff5777;
  color: white;
}
.low{
  background-color:green;
  color: white;
}
.high-text{
  color: #ff5777;
}
.low-text{
  color: green;
}
.enter-shop{
  background-color: rgba(0,0,0,.1);
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  position:absolute;
  left: 50%;
  transform: translateX(-50%);
}