<view class='cart-list-item'>
  <view class='item-icon' bindtap="onCheckClick">
    <icon type="success" color="{{goods.checked === true ? '#ff5777':'#aaa'}}"></icon>
  </view>
  <view class='item-img'>
    <image src="{{goods.imgaeUrl}}" mode='aspectFill'/>
  </view>
  <view class='item-info'>
    <view class='title'>{{goods.title}}</view>
    <view class='desc'>{{goods.desc}}</view>
    <view class='price-count'>
      <view class='price'>Â¥{{goods.price}}</view>
      <view class='count'>x{{goods.count}}</view>
    </view>
  </view>
</view>